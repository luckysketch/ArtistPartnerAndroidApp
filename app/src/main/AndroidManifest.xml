<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appbygourav.gridtimeanalysisapp">

    <!-- Permissions for reading and writing external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Luckyimages">
        <activity
            android:name=".HelpSection"/>
        <activity
            android:exported="false"
            android:name=".LuckyGridview"
            android:screenOrientation="portrait" />
        <activity
            android:exported="false"
            android:name=".AllProjects"
            android:screenOrientation="portrait" />
        <activity
            android:exported="false"
            android:name=".ProjectOverview"
            android:screenOrientation="portrait" />
        <activity
            android:exported="false"
            android:name=".LuckySettings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6124418871253427~5152301202" />
    </application>

</manifest>